<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saket.protoprotojiga.infopage2"
    tools:showIn="@layout/activity_infopage2">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewId"
                android:layout_width="184dp"
                android:layout_height="244dp"
                app:srcCompat="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/linearlayoutid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="32dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5" />

                <!--
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Genres: "
                    android:textSize="22dp" />
                    -->

                <TextView
                    android:id="@+id/genresTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>

                <!--

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:padding="10dp"
                    android:textSize="22dp"/>

                    -->

                <TextView
                    android:id="@+id/statusTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        // Summary
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="click_summary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/button_onoff_indicator_on"
                    android:layout_margin="5dp"
                    android:id="@+id/summaryiconId"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="30dp"
                    android:onClick="click_summary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/summaryTextId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="18dp"
                android:layout_marginLeft="25dp"
                android:visibility="visible" />

        </LinearLayout>

        // Show Times
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/button_onoff_indicator_on"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Times"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/showTimesTextId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="19dp"
                android:visibility="gone"/>

        </LinearLayout>

        // Episode Guide
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/button_onoff_indicator_on"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Times"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/episodeGuideTextId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="19dp"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
